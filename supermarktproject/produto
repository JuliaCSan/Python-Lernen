from utils.helpers import format_float_str_moeda


class Produto:
    contador: int = 1


    def __init__(self: object, nome, preco) -> None:
         self.__codigo = Produto.contador
         self.__nome = nome
         self.__preco = preco
         Produto.contador += 1\

    @property
    def codigo(self: object) -> int:
        return self.__codigo

    @property
    def nome(self: object) -> str:
         return self.__nome

    @property
    def preco(self: object) -> float:
        return self.__preco

    def __str__(self) -> str:
        return f'Codigo: {self.codigo}\nPre√ßo: R$ {format_float_str_moeda(self.preco)}'
